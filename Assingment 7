#include <stdio.h>
#include <stdlib.h>
#include <math.h>

void print_menu ();
long fact (int);
int nCr (int, int);
int sum (int);


int
main (int argc, const char *argv[])
{
  int menu;
  int n, r;

  do
    {
      print_menu ();
      scanf ("%d", &menu);

      if (menu < 4)
	{

	  printf ("Input your number(n): ");
	  scanf ("%d", &n);
	}

      switch (menu)
	{

	case 1:
	  printf ("Your factorial (n!) is %ld\n", fact (n));
	  break;

	case 2:
	  printf ("Input your 'r'");
	  scanf ("%d", &r);
	  printf ("Your %dC%d is %d", n, r, nCr (n, r));
	  break;

	case 3:
	  printf ("Your sumation(Sum(n)) is %d", sum (n));
	  break;
	default:
	  break;

	}

    }
  while (menu < 4);

  return 0;
}

long
fact (int n)
{				//long use with factorial
  long f;			//n*(n-1)*(n-2)*(n-3)
  f = 1;

  for (; n > 0; n--)
    {
      f = f * n;

    }
  return f;

}


int
nCr (int n, int r)
{
  int cnr;


  cnr = (fact (n)) / (fact (r) * fact (n - r));

  return cnr;

}


int
sum (int n)
{				
  int s = 0;

  for (; n > 0; n--)
    {
      s += n;

    }
  return s;

}

void
print_menu ()
{

  printf ("What do you want to do ?\n");
  printf ("1.Find Factorial\n");
  printf ("2.Find Combinatorial number\n");
  printf ("3.Find Summation\n");
  printf ("4.Exist the Program\n");

}
